<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Category</th>
    <th>Topic</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.name, post %></td>
    <td><%= post.content %></td>
    <td><%= link_to post.category, post.category %></td>
    <td><%= link_to post.topic, post.topic %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
