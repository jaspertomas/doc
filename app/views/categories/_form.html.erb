    <%= f.label :is_default %><br />
    <%= f.check_box :is_default %>
  </div>

  <div class="field">
    <%= f.label :sort_order %><br />
    <%= f.text_field :sort_order %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
